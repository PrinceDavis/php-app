#!/usr/bin/env bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

cd $DIR/nginx
docker build -t ossaijad/nginx:$1 -t ossaijad/nginx:latest .
docker push ossaijad/nginx:$1
docker push ossaijad/nginx:latest

cd $DIR/php
docker build -t ossaijad/php:$1 -t ossaijad/php:latest .
docker push ossaijad/php:$1
docker push ossaijad/php:latest
